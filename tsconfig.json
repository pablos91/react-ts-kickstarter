{
    "compilerOptions": {
        "outDir": "./",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        // This must be specified if "paths" is set
        "baseUrl": ".",
        // Relative to "baseUrl"
        "paths": {
            "*": [
                "*",
                "src/*"
            ]
        }
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}